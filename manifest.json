{
  "manifest_version": 3,
  "name": "Fake Review Detector",
  "version": "1.0.0",
  "description": "Detects fake reviews on shopping websites using a machine learning model.",
  "action": {
    "default_title": "Fake Review Detector",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "static/icons/icon16.png",
    "48": "static/icons/icon48.png",
    "128": "static/icons/icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "http://localhost:5051/*",
    "https://www.amazon.in/*",
    "https://www.flipkart.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "options_ui": { "page": "options/options.html", "open_in_tab": true },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.in/*"],
      "js": ["content_scripts/amazon/index.js"],
      "css": ["content_scripts/style.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.flipkart.com/*"],
      "js": ["content_scripts/flipkart/index.js"],
      "css": ["content_scripts/style.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content_scripts/shared.js"],
      "matches": ["https://www.amazon.in/*", "https://www.flipkart.com/*"]
    }
  ]
}
